<project name="Javascript Builder" default="build">
  
  <property name="vendor" value="benignware"/>
  
  <property file="build.properties"/>
  
  <target name="clean">
    <delete dir="${build.dir}" />
  </target>
  
  <delete dir="${obj-dir}" />
  
  <target name="build">
        
    <mkdir dir="${build.dir}"/>
  
    <copy todir="${build.dir}">
      <fileset dir="${basedir}/src"></fileset>
    </copy>
    
    <java jar="${build.yuicompressor}" fork="true" failonerror="true">
      <arg value="${build.dir}/mugen.js"/>
      <arg line="-o ${build.dir}/mugen.min.js"/>
    </java>
  
  </target>
  
  
</project>